

<div class="jumbotron text-center">
  <h1>Welcome</h1>
  <h3>Help in obtaining health insurance</h3>
  <h3>Affordable Care Act / Medicare / Life Insurance / Group Insurance</h3>
  <h5>Email@email.com</h5>
</div>

<div class="row">
  <% if user_signed_in? %>
    <%# show profile links %>
    <div class="col-md-6">
       <div class="well">
         <h2 class="text-center">Your Profile</h2>
        <% if current_user.profile %>
        <%#link to edit the user profile %>
          <%= link_to "Edit your Profile", "#", class: 'btn btn-primary btn-lg btn-block'%>
          <%= link_to "View yor profile", user_path(id: current_user),class: 'btn btn-primary btn-lg btn-block' %>
        <% else %>
         <%= link_to "Create your profile!", new_user_profile_path(current_user),class: 'btn btn-primary btn-lg btn-block'%> 
         <% end %>
       </div>
     </div>
     
     <div class="col-md-6">
       <div class="well">
         <h2 class="text-center">The Community</h2>
         <p>Click the link below to visit the community to meet other developers, entrepreneurs, and investors!</p>
         <%= link_to "Visit the community", "#",class: 'btn btn-primary btn-lg btn-block' %>
       </div>
     </div>
  <% else %>
    <div class=col-md-6>
      <div class="well">
        <h2 class="text-center">Basic Membership</h2>
        <h4 class="text-center">Sign up for free and get basic access to the community.</h4>
        <br />
        <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
        
        
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
       <h2 class="text-center">Pro Membership</h2>
       <h4 class="text-center">Sign up for the pro account for $10/month and get access to the community and contact information!</h4>
       <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
    </div>
    
    </div>
<% end %>

